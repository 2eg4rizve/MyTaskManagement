@page "{id:int}"
@model MyTaskManagement.Pages.Tasks.DeleteModel
@{
    ViewData["Title"] = "Delete Task";
}

<h2>Delete Task</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this task?
</div>

<dl class="row">
    <dt class="col-sm-3">Title</dt>
    <dd class="col-sm-9">@Model.TaskItem.Title</dd>

    <dt class="col-sm-3">Due Date</dt>
    <dd class="col-sm-9">@Model.TaskItem.DueDate?.ToString("yyyy-MM-dd")</dd>
</dl>

<form method="post">
    <input type="hidden" asp-for="TaskItem.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
